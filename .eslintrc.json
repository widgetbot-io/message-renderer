{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:storybook/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "eqeqeq": "error",
        "func-style": [
            "error",
            "declaration"
        ],
        "no-else-return": "error",
        "no-nested-ternary": "error",
        "no-redeclare": "error",
        "no-return-await": "error",
        "no-var": "error",
        "prefer-const": "error",
        "yoda": "error"
    }
}
